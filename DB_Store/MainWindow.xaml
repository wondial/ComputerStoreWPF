            </Grid>
            <!-- Заявки/Applications -->
            <Grid x:Name="gridApplications" HorizontalAlignment="Left" Height="555" Margin="0,0,0,0" VerticalAlignment="Top" Width="260" Visibility="Hidden">
                <Label Content="Клиент" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
