<Window x:Class="DB_Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Store"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1200"
        Height="590"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <Grid>
        <Grid x:Name="titleBar" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="1200" Background="#272f3c" MouseDown="titleBar_MouseDown">
            <Label Content="База данных магазина" HorizontalAlignment="Left" Margin="4,3,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#ffffff"/>
            <Button x:Name="buttonClose" HorizontalAlignment="Left" Height="35" Margin="1165,0,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource TitleBarButtonClose}" Click="buttonClose_Click">
                <Image HorizontalAlignment="Left" Height="18" Width="18" Source="Icons\Close.png"/>
            </Button>
            <Button x:Name="buttonMinimize" HorizontalAlignment="Left" Height="35" Margin="1130,0,0,0" VerticalAlignment="Top" Width="35" Style="{StaticResource TitleBarButtonMinimize}" Click="buttonMinimize_Click">
                <Image HorizontalAlignment="Left" Height="18" Width="18" Source="Icons\Minimize.png"/>
            </Button>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="555" Margin="940,35,0,0" VerticalAlignment="Top" Width="260" Background="#f3f2f2">
            <!-- Марки/Brands -->
            <Grid x:Name="gridBrands" HorizontalAlignment="Left" Height="555" Margin="0,0,0,0" VerticalAlignment="Top" Width="260" Visibility="Hidden">
                <Label Content="Название марки" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <Label Content="(?)" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#15a4fa" ToolTipService.InitialShowDelay="1">
                    <Label.ToolTip>
                        <ToolTip Placement="Left" HorizontalOffset="24" VerticalOffset="32" Background="#15a4fa" BorderThickness="0" Opacity="0.9" Height="26" Width="236">
                            <TextBlock Foreground="#ffffff" FontSize="13">Только англ. символы</TextBlock>
                        </ToolTip>
                    </Label.ToolTip>
                </Label>
                <TextBox x:Name="textBoxBrand" MaxLength="25" HorizontalAlignment="Left" Height="30" Margin="10,40,0,0" Text="{Binding Path=SelectedItem.Марка, ElementName=dataGrid, Mode=OneWay}" VerticalAlignment="Top" Width="240" Style="{StaticResource RightTextBox}" PreviewTextInput="PreviewTextInputCheck" TextChanged="TextChangedCheck"/>
                <Button x:Name="buttonUpdateBrands" Content="ОБНОВИТЬ ТАБЛИЦУ" HorizontalAlignment="Left" Margin="10,510,0,0" VerticalAlignment="Top" Width="240" Height="35" Style="{StaticResource UpdateButton}" Click="buttonUpdateBrands_Click"/>
            </Grid>
            <!-- Типы/Types -->
            <Grid x:Name="gridTypes" HorizontalAlignment="Left" Height="555" Margin="0,0,0,0" VerticalAlignment="Top" Width="260" Visibility="Hidden">
                <Label Content="Название типа" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <Label Content="(?)" HorizontalAlignment="Left" Margin="224,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#15a4fa" ToolTipService.InitialShowDelay="1">
                    <Label.ToolTip>
                        <ToolTip Placement="Left" HorizontalOffset="24" VerticalOffset="32" Background="#15a4fa" BorderThickness="0" Opacity="0.9" Height="26" Width="236">
                            <TextBlock Foreground="#ffffff" FontSize="13">Только рус. символы</TextBlock>
                        </ToolTip>
                    </Label.ToolTip>
                </Label>
                <TextBox x:Name="textBoxType" MaxLength="25" HorizontalAlignment="Left" Height="30" Margin="10,40,0,0" Text="{Binding Path=SelectedItem.Тип, ElementName=dataGrid, Mode=OneWay}" VerticalAlignment="Top" Width="240" Style="{StaticResource RightTextBox}" PreviewTextInput="PreviewTextInputCheck" TextChanged="TextChangedCheck"/>
                <Button x:Name="buttonUpdateTypes" Content="ОБНОВИТЬ ТАБЛИЦУ" HorizontalAlignment="Left" Margin="10,510,0,0" VerticalAlignment="Top" Width="240" Height="35" Style="{StaticResource UpdateButton}" Click="buttonUpdateTypes_Click"/>
            </Grid>
            <!-- Модели/Models -->
            <Grid x:Name="gridModels" HorizontalAlignment="Left" Height="555" Margin="0,0,0,0" VerticalAlignment="Top" Width="260" Visibility="Hidden">
                <Label Content="Тип модели" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <ComboBox x:Name="comboBoxModelsTypes" Background="#ffc5c5" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="240" Height="30" IsEditable="True" SelectionChanged="SelectionChangedCheck"/>
                <Label Content="Марка модели" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <ComboBox x:Name="comboBoxModelsBrands" Background="#ffc5c5" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="240" Height="30" IsEditable="True" SelectionChanged="SelectionChangedCheck"/>
                <Label Content="Название модели" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <Label Content="(?)" HorizontalAlignment="Left" Margin="224,150,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#15a4fa" ToolTipService.InitialShowDelay="1">
                    <Label.ToolTip>
                        <ToolTip Placement="Left" HorizontalOffset="24" VerticalOffset="32" Background="#15a4fa" BorderThickness="0" Opacity="0.9" Height="26" Width="236">
                            <TextBlock Foreground="#ffffff" FontSize="13">Только англ. символы, цифры, тире</TextBlock>
                        </ToolTip>
                    </Label.ToolTip>
                </Label>
                <TextBox x:Name="textBoxModel" MaxLength="25" HorizontalAlignment="Left" Height="30" Margin="10,180,0,0" Text="{Binding Path=SelectedItem.Модель, ElementName=dataGrid, Mode=OneWay}" VerticalAlignment="Top" Width="240" Style="{StaticResource RightTextBox}" PreviewTextInput="PreviewTextInputCheck" TextChanged="TextChangedCheck"/>
                <Button x:Name="buttonUpdateModels" Content="ОБНОВИТЬ ТАБЛИЦУ" HorizontalAlignment="Left" Margin="10,510,0,0" VerticalAlignment="Top" Width="240" Height="35" Style="{StaticResource UpdateButton}" Click="buttonUpdateModels_Click"/>
            </Grid>
            <!-- Устройства/Devices -->
            <Grid x:Name="gridDevices" HorizontalAlignment="Left" Height="555" Margin="0,0,0,0" VerticalAlignment="Top" Width="260" Visibility="Hidden">
                <Label Content="Устройство" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <ComboBox x:Name="comboBoxDevicesModels" Background="#ffc5c5" IsEditable="True" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="240" Height="30" SelectionChanged="SelectionChangedCheck"/>
                <Label Content="Стоимость устройства" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <Label Content="(?)" HorizontalAlignment="Left" Margin="224,80,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#15a4fa" ToolTipService.InitialShowDelay="1">
                    <Label.ToolTip>
                        <ToolTip Placement="Left" HorizontalOffset="24" VerticalOffset="32" Background="#15a4fa" BorderThickness="0" Opacity="0.9" Height="26" Width="236">
                            <TextBlock Foreground="#ffffff" FontSize="13">Только цифры</TextBlock>
                        </ToolTip>
                    </Label.ToolTip>
                </Label>
                <TextBox x:Name="textBoxPrice" MaxLength="25" HorizontalAlignment="Left" Height="30" Margin="10,110,0,0" Text="{Binding Path=SelectedItem.Стоимость, ElementName=dataGrid, Mode=OneWay}" VerticalAlignment="Top" Width="240" Style="{StaticResource RightTextBox}" PreviewTextInput="PreviewTextInputCheck" PreviewKeyDown="PreviewKeyDownCheck" TextChanged="TextChangedCheck"/>
