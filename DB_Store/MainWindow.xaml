                <TextBox x:Name="textBoxPhoneSupplier" MaxLength="25" HorizontalAlignment="Left" Height="30" Margin="10,110,0,0" Text="{Binding Path=SelectedItem.Телефон, ElementName=dataGrid, Mode=OneWay}" VerticalAlignment="Top" Width="240" Style="{StaticResource RightTextBox}" PreviewTextInput="PreviewTextInputCheck" TextChanged="TextChangedCheck"/>
                <Label Content="Адрес" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#6f7a8b"/>
                <Label Content="(?)" HorizontalAlignment="Left" Margin="224,150,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="#15a4fa" ToolTipService.InitialShowDelay="1">
